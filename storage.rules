rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rules untuk profile photos
    match /profile_photos/{fileName} {
      // Allow read untuk semua user yang sudah login
      allow read: if request.auth != null;

      // Allow write hanya jika user sudah login dan nama file = userId.jpg
      allow write: if request.auth != null &&
                      fileName == request.auth.uid + '.jpg';

      // Allow delete hanya untuk pemilik file
      allow delete: if request.auth != null &&
                       fileName == request.auth.uid + '.jpg';
    }

    // Rules untuk contact photos
    match /contact_photos/{fileName} {
      // Allow read untuk semua user yang sudah login
      allow read: if request.auth != null;

      // Allow write untuk semua user yang sudah login
      allow write: if request.auth != null;

      // Allow delete untuk semua user yang sudah login
      allow delete: if request.auth != null;
    }

    // Rules untuk file lainnya - deny by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
